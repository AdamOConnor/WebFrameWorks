{% extends '_base.html.twig' %}
{# ---------------------- title for webpage --------------------------- #}
{% block title %}Admin Create Message{% endblock %}

{% block main %}

    <h1>Create a message to send to everyone</h1>

    <fieldset>
        <legend>Send us a message to say hi!</legend>
        {# ---------------------- send public message --------------------------- #}
        <form method="post" action="/processMessage">

            <p>
                Your message:
                <br>
                <textarea name="text" cols="40" rows="5" required></textarea>
            </p>

            <p>
                <input type="hidden" name="usernameId" value="{{ username }}">
                <input type="submit" value="Send Message">
            </p>

        </form>
    </fieldset>

{% endblock %}