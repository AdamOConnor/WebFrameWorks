{% extends '_base.html.twig' %}

{# ------------------------------------------------- #}
{% block pageTitle %}{{ title }}{% endblock %}

{# ------------------------------------------------- #}

{% block main %}
<div id="mainSection">

    <h1>
        {% if headingMessage %}
            {{ headingMessage }}
        {% endif %}
    </h1>

    <p>
        {% if otherMessage %}
            {{ otherMessage }}
        {% endif %}
    </p>
    <p>
        {% for file in files %}
            {{ file }}
        {% endfor %}
    </p>
</div>
{% endblock %}
