{% extends '_base.html.twig' %}

{# ----------------------- title of the webpage -------------------------- #}
{% block pageTitle %}message edit page{% endblock %}

{# --------------------- main block section ---------------------------- #}
{% block main %}

<h1>
Edit your message
</h1>


<fieldset>
    <legend>Send us a message to say hi!</legend>

    <form method="post" action="/processMessageUpdateForm">

        <p>
            Your message:
            <br>
            <textarea name="text" cols="40" rows="5" required>{{ message.text }}</textarea>
        </p>

        <input type="hidden" name="id" value="{{ message.id }}">

        <p>
            <input type="submit" value="update message">
        </p>

    </form>
</fieldset>

{% endblock %}
