{% extends '_base.html.twig' %}

{# ------------------------------------------------- #}
{% block pageTitle %}Messages page{% endblock %}

{# ------------------------------------------------- #}
{% block messagesLinkStyle %}current_page{% endblock %}

{# ------------------------------------------------- #}
{% block main %}

<!-- start table for displaying DVD details -->
<h2>Messages from people</h2>
    <br>
    <a href="/showPrivate" class="createMessage">Private Messages</a>
    <br>
{% for message in messages %}
    <hr>
    <p>
        posted by <strong>{{ message.user }}</strong>
        <br>
        {{ message.timestamp|date("l jS M h:i:s A", "Europe/Dublin")  }}
    </p>

    <blockquote>
        {{ message.text }}
    </blockquote>
    {% if message.email is sameas(emailId) %}
        {% include 'messageUD.html.twig' %}
    {% else %}
        <br>
    {% endif %}

{% else %}
    {% if otherMessage %}
        <p>{{ otherMessage }}</p>
    {% else %}
    <p>(no messages found)</p>
    {% endif %}
{% endfor %}

{% endblock %}
